{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          "plugins/**",
          "utils/**",
          "locales/**",
          "static/**",
          ".nuxt/content/**",
          "content/**",
          "api/**"
        ]
      }
    }
  ],
  "buildCommand": "yarn build",
  "outputDirectory": "dist",
  "framework": "nuxtjs"
}
